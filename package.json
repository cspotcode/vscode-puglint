{
  "name": "vscode-puglint",
  "displayName": "puglint",
  "description": "Linter and style checker for Pug (formerly Jade)",
  "version": "1.0.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.0.0"
  },
  "icon": "icon.svg",
  "author": {
    "name": "Denis Malinochkin",
    "url": "www.canonium.com"
  },
  "homepage": "https://github.com/mrmlnc/vscode-puglint/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-puglint"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:pug",
    "onLanguage:jade"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "puglint configuration options",
      "properties": {
        "puglint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Control whether pug-lint is enabled for Pug/Jade files or not."
        },
        "puglint.config": {
          "type": "object",
          "default": null,
          "description": "A pug-lint configuration object."
        }
      }
    }
  },
  "scripts": {
    "test": "xo"
  },
  "dependencies": {
    "co": "^4.6.0",
    "pug-lint": "^2.1.8",
    "vscode-languageclient": "^2.2.1",
    "vscode-languageserver": "^2.2.0"
  },
  "devDependencies": {
    "vscode": "^0.11.13",
    "xo": "^0.15.1"
  },
  "xo": {
    "rules": {
      "indent": [2, 2, { "SwitchCase": 1 }],
      "arrow-parens": [2, "always"],
      "object-curly-spacing": [2, "always"],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [2, "never"]
    }
  }
}
